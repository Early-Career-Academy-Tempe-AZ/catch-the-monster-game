vendor-prefixes ?= webkit moz o ms official
@import 'nib/vendor'

background_color = #545454
yelow_color = #F0DB4F
red_color = #E24141
black_color = #323330

body
	background-color background_color
	font-size 16px
	color white
	
h1
	margin-top 50px
	text-align center
	font-family "Press Start 2P"
	font-size 2em
	color red_color
	text-shadow 4px 1px 2px yelow_color,7px 6px 0 black_color

.loading-image
	background-color rgba(black, 0.5)
	position fixed
	left 0px
	top 0px
	width 100%
	height 100%
	text-align center
	z-index 5000
	opacity 0.5

	.image-loading-center
		width 300px
		height 200px
		position absolute
		top 40%
		left 0px
		width 100%

#container-game
	width 100%
	text-align center
	canvas
		display inline
		border 2px solid yelow_color
		
.game-form
	text-align center

.input-nickname-game
	font-family "Roboto Slab"
	font-style normal
	font-weight normal
	text-decoration inherit
	font-size 1.3em
	padding-left 10px
	height 50px
	width 80%
	border 2px solid red_color
	border-radius 5px
	background-color white
	color black_color
	margin 0 auto
	
.button-game
	position relative
	color white
	text-decoration none
	background-color red_color
	font-family 'Roboto Slab'
	font-weight 700
	font-size 3em
	display block
	padding 4px
	border-radius 8px
	box-shadow 0px 9px 0px red_color, 0px 9px 25px rgba(0,0,0,.7)
	width 80%
	margin 0 auto
	text-align center
	transition all 0.1s ease
	
	&:active
		box-shadow 0px 3px 0px red_color, 0px 3px 6px rgba(0,0,0,.9)
		position relative
		top 6px

.ranking-player-title
	margin-top 20px
	text-align center
	font-family "Press Start 2P"
	font-size 1.2em
	color red_color
	text-shadow 4px 1px yelow_color, 5px 4px black_color

.ranking-players
	background-color red_color
	border-spacing 2px
	border-style solid
	border-width 2px
	border-color yelow_color
	font-family "Roboto Slab", "Helvetica", sans-serif
	padding 8px 6px
	box-shadow -2px 5px 2px 1px black_color
	border-radius 5px
	width 100%
	tr
		color #FFFFFF
		font-size 1em
		font-weight normal
		.monster-caught-th
			width 140px
			margin-top 10px
		th
			color #FFE100
			font-size 1em
			font-weight bold
			padding 0px
			text-align center
			vertical-align top
			&:first-child
				border-top-left-radius 2px				
			&:last-child
				border-top-right-radius 2px

		&:hover td
			background #8C0B0B
			
		&:first-child td
			border-bottom-left-radius 2px
			color black_color
			background-color yelow_color
		td
			padding 0px
			text-align center
			vertical-align top